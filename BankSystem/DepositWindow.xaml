<Window x:Class="BankSystem.DepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="DepositWindow" Height="150" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Сумма" FontSize="14" Margin="10,0"/>
            <TextBox x:Name="txtboxAmount" Height="25" Margin="10,0" />
            <Button Content="Пополнить"  Height="30" x:Name="DepositBtn" Margin="50,10,50,0"/>
        </StackPanel>
        
    </Grid>
</Window>
