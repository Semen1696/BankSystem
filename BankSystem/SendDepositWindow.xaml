<Window x:Class="BankSystem.SendDepositWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="SendDepositWindow" Height="250" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="10">
                <TextBlock Text="Номер счета" FontSize="14"/>
                <TextBox x:Name="txtboxNumber" Height="25" />
            </StackPanel>

            <StackPanel Margin="10">
                <TextBlock Text="Сумма" FontSize="14"/>
                <TextBox x:Name="txtboxAmount" Height="25"/>
            </StackPanel>
            
            <Button Content="Отправить" 
                    Margin="10,0" Height="30" 
                   x:Name="SendBtn"/>

        </StackPanel>
    </Grid>
</Window>
