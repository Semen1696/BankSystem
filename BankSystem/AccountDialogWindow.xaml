<Window x:Class="BankSystem.AccountDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="AccountDialogWindow" Height="150" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="30" />
        <RowDefinition Height="30" />
        <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center">Выберете счет</TextBlock>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" >
            <Button Click="Sample_Click" MinWidth="60" Margin="0,0,10,0">Обычный</Button>
            <Button MinWidth="60" Click="Deposit_Click">Депозитный</Button>
        </WrapPanel>
    </Grid>
</Window>
